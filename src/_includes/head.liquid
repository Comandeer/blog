<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=false">
	<title>{% if title %}{{ title | escape }} â€” {% endif %}{{ site.title | escape }}</title>
	<meta name="description" content="{% if description %}{{ description | escape }}{% else %}{{ site.description | escape }}{% endif %}">
	<meta property="og:title" content="{% if title %}{{ title | escape }}{% else %}{{ site.title | escape }}{% endif %}">
	<meta property="og:description" content="{% if description %}{{ description | escape }}{% else %}{{ site.description | escape }}{% endif %}">
	{% if title %}
	<meta property="og:type" content="article">
	<meta property="article:published_time" content="{{ page.date | rfc_date }}">
	<meta property="article:author" content="{{ author | escape }}">
	{% else %}
	<meta property="og:type" content="website">
	{% endif %}
	<meta property="og:url" content="{{ site.url }}{{ page.url | replace:'index.html','' }}">
	<meta property="og:image" content="{{ "/assets/logo-og.png" }}">
	<meta property="og:image:width" content="200">
	<meta property="og:image:height" content="200">
	<link rel="icon" href="/assets/logo-light.svg">
	<link rel="stylesheet" href="{{ "/assets/main.css" | rev }}" id="page-styles">
	<link rel="canonical" href="{{ site.url }}{{ page.url | replace:'index.html','' }}">
	<link rel="alternate" type="application/atom+xml" title="{{ site.title | escape }}" href="/feeds/feed.xml">
	<script>
		{
			const date = new Date();
			const day = date.getDate();
			const month = date.getMonth();

			if ( day === 9 && month === 3 ) {
				// CSS Naked Day!
				const pageStyles = document.querySelector( '#page-styles' );

				pageStyles.media = 'none';
			}
		}
	</script>
	<script src="/assets/main.js" type="module"></script>
</head>
