<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=false">
	<meta name="color-scheme" content="light dark">
	<meta name="theme-color" media="(prefers-color-scheme: light)" content="#ddd">
	<meta name="theme-color" media="(prefers-color-scheme: dark)" content="#555">
	<title>{% if title %}{{ title | escape }} â€” {% endif %}{{ site.title | escape }}</title>
	<meta name="description" content="{% if description %}{{ description | escape }}{% else %}{{ site.description | escape }}{% endif %}">
	<meta property="og:title" content="{% if title %}{{ title | escape }}{% else %}{{ site.title | escape }}{% endif %}">
	<meta property="og:description" content="{% if description %}{{ description | escape }}{% else %}{{ site.description | escape }}{% endif %}">
	{% if title %}
	<meta property="og:type" content="article">
	<meta property="article:published_time" content="{{ page.date | rfc_date }}">
	<meta property="article:author" content="{{ author | escape }}">
	{% else %}
	<meta property="og:type" content="website">
	{% endif %}
	<meta property="og:url" content="{{ site.url }}{{ page.url | cfUrl }}">
	<meta property="og:image" content="{{ "/assets/logo-og.png" }}">
	<meta property="og:image:width" content="200">
	<meta property="og:image:height" content="200">
	<script>
		document.documentElement.classList.remove( 'no-js' );

		try {
			const theme = JSON.parse( localStorage.getItem( 'theme' ) ) ?? 'auto';
			document.documentElement.dataset.theme = theme;
		} catch {
			document.documentElement.dataset.theme = 'auto';
		}
	</script>
	<link rel="manifest" href="/manifest.webmanifest">
	<link rel="icon" type="image/svg+xml" href="/assets/logo.svg">
	<link rel="icon" href="/favicon.ico" sizes="32x32">
	<link rel="apple-touch-icon" href="/apple-touch-icon.png">
	<link rel="stylesheet" href="{{ "/assets/main.css" | asset }}" id="page-styles">
	<link rel="canonical" href="{{ site.url }}{{ page.url | cfUrl }}">
	<link rel="alternate" type="application/atom+xml" title="{{ site.title | escape }}" href="/feeds/feed.xml">
	<script>
		{
			const date = new Date();
			const day = date.getDate();
			const month = date.getMonth();

			if ( day === 9 && month === 3 ) {
				// CSS Naked Day!
				const pageStyles = document.querySelector( '#page-styles' );

				pageStyles.media = 'none';
			}
		}
	</script>
	<script src="{{ "/assets/main.js" | asset }}" type="module"></script>
	 <script type="module">
		if ( 'serviceWorker' in navigator ) {
			try {
				await navigator.serviceWorker.register( '{{ "/sw.js" | asset }}', {
					scope: '/'
				} );
			} catch {}
		}
	</script>
</head>
