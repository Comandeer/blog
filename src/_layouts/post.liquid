<!DOCTYPE html>
	<html lang="pl" prefix="og: http://ogp.me/ns#" vocab="http://schema.org">
	  {% include 'head' %}
	  <body>
		{% include 'header' %}
		<main id="tresc">
			<article class="post" typeof="BlogPosting">

				<header class="post__header header">
				  <h1 class="header__heading" property="name headline">{{ title }}</h1>
				  {%  include 'post-metadata' date=page.date author=author tags=tags %}
			  </header>

				<div class="post__content" property="articleBody">
				  {{ content }}
				</div>

				{% if site.disqus.shortname %}
				  {% include 'disqus_comments' %}
				{% endif %}
			</article>
		</main>
		{% include 'footer' %}
	  </body>
	</html>
