{% assign date = include.date %}
{% assign author = include.author %}
{% assign tags = include.tags %}

<p class="post-meta">
	<time
		datetime="{{ include.date | date: "%Y-%m-%d" }}"
	>{{ include.date | date: "%d-%m-%Y" }}</time>{% if author %} • {{ author }}{% endif %}{% for tag in tags %} • <a
		href="/{{ tag | url_encode }}">{{ site.tagNames[ tag ] }}</a
	>{% endfor %}
</p>
