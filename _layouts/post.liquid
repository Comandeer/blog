---
layout: default
---
<article class="post" typeof="BlogPosting">

  <header class="post-header">
    <h1 class="post-title" property="name headline">{{ title | escape }}</h1>
	{%  include 'post-metadata' date=page.date author=author tags=tags %}
</header>

  <div class="post-content" property="articleBody">
    {{ content }}
  </div>

  {% if site.disqus.shortname %}
    {% include 'disqus_comments' %}
  {% endif %}
</article>
